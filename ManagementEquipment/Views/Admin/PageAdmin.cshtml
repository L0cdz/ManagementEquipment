@model ManagementEquipment.Models.Equipment
<h1>Admin</h1>
@{
    ViewBag.Title = "Quản lý thiết bị";
}
@section header{
   Danh Sánh Thiết Bị
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Equipment

            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thread>
                            <tr>
                                <th>#</th>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Immage</th>
                                <th>Quality</th>
                            </tr>
                        </thread>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Model.id
                                    </td>
                                    <td>
                                        @Model.name
                                    </td>
                                    <td>
                                        @Model.description
                                    </td>
                                    <td>
                                        <img src="@Html.DisplayFor(model => Model.imageUrl)" width="300" height="300" />
                                    </td>
                                    <td>
                                        @Model.quality
                                    </td>
                               
                                    <td>
                                        <button value="Xóa"></button>
                                        <button value="Sửa"></button>
                                        <button value="Thêm"></button>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                    <!--/.Html.PageListPaper(Model, page => Url.Action("Index",new {page}))-->
                </div>
            </div>
        </div>

    </div>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }