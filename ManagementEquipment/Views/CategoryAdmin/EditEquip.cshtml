@model ManagementEquipment.Models.Equipment


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <style>
        .btn {
            width: 100%;
            margin-top: 20px;
            font-size: 20px;
            font-weight: 500;
            line-height: 10px;
        }

        input {
            height: 35px;
        }

        .form-group {
            margin-top: 20px;
        }

        label {
            font-size: 20px;
            font-weight: 500;
        }

     
    </style>
</head>
<body>

    <h4 style="text-align: center; form-size: 23px; margin-top: 20px;">edit</h4>
    <hr style="width: 50%; margin: auto;" />
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="EditEquip">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
                <div class="form-group">
                    <label asp-for="name" class="control-label"></label>
                    <input asp-for="name" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="description" class="control-label"></label>
                    <input asp-for="description" class="form-control" />
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="quality" class="control-label"></label>
                    <input asp-for="quality" class="form-control" />
                    <span asp-validation-for="quality" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="imageUrl" class="control-label"></label>
                    <input asp-for="imageUrl" class="form-control"/>
                    <span asp-validation-for="imageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div style="margin-left: 35%; margin-top: 30px;">
        <a asp-action="ManagementEquip">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    </body>
    </html>
