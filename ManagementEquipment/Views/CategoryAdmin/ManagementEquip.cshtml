@model IEnumerable<ManagementEquipment.Models.Equipment>

<style>
    .wrap-img {
        width: 200px;
        height: 100px
    }
    .wrap-img > * {
        width: 100%;
    }

    td {
        text-align: center;
    }
   
</style>
<h1>Admin</h1>
<body>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thread>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Quality</th>
                                    <th>Immage</th>
                                    <th>Activity</th>
                                </tr>
                            </thread>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.id
                                        </td>
                                        <td>
                                            @item.name
                                        </td>
                                        <td>
                                            @item.description
                                        </td>
                                        <td>
                                            @item.quality
                                        </td>
                                        <td class="wrap-img">
                                            <img src="@item.imageUrl" class="image" />
                                        </td>

                                        <td style="text-align: center;">
                                            @Html.ActionLink("AddEquip", "AddEquip", new{id = item.id}) |
                                            @Html.ActionLink("DeleteEquip", "DeleteEquip", new{id = item.id}) |
                                            @Html.ActionLink("EditEquip", "EditEquip", new{id = item.id})
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>
</body>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }